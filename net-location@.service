[Unit]
Description=Network geo-location service
After=docker.service
Requires=docker.service

[Service]
TimeoutStartSec=0
ExecStartPre=-/usr/bin/docker kill %p
ExecStartPre=-/usr/bin/docker rm %p
ExecStartPre=/usr/bin/docker pull asteere/netlocation:raptor
ExecStart=/usr/bin/docker run --name %p -P -d asteere/netlocation:raptor node /src/index.js
ExecStop=/usr/bin/docker stop %p

[X-Fleet]
Conflicts=nginx@*.service
