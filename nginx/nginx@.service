[Unit]
Description=nginx load balancer aka reverse proxy
After=docker.service
Requires=docker.service

[Service]
TimeoutStartSec=0
ExecStartPre=-/usr/bin/docker kill %p
ExecStartPre=-/usr/bin/docker rm %p
ExecStartPre=/usr/bin/docker pull asteere/%p:raptor
ExecStart=/usr/bin/docker run --name %p -P -d asteere/%p:raptor
ExecStop=/usr/bin/docker stop %p

[X-Fleet]
Conflicts=net-location@*.service
