#cloud-config

---
coreos:
  update:
    reboot-strategy: !!str off
  etcd:
    discovery: https://discovery.etcd.io/06ba7da0d69ee50b963604714f7ea022
    addr: $private_ipv4:4001
    peer-addr: $private_ipv4:7001
    peer-election-timeout: 2000
    peer-heartbeat-interval: 500
  fleet:
    public-ip: $private_ipv4
    etcd_request_timeout: 3.0
    metadata: core-01=172.17.8.101,core-02=172.17.8.102,core-03=172.17.8.103
  units:
  - name: etcd.service
    command: start
  - name: fleet.service
    command: start
  - name: docker-tcp.socket
    command: start
    enable: true
    content: |
      [Unit]
      Description=Docker Socket for the API

      [Socket]
      ListenStream=2375
      Service=docker.service
      BindIPv6Only=both

      [Install]
      WantedBy=sockets.target
  - name: s3fs.service
    command: start
    enable: true
    content: |
      [Unit]
      Description=mount S3 ad-nimbus bucket

      [Service]
      Type=oneshot

      ExecStartPre=/usr/bin/mkdir -p /tmp/s3fs_cache
      ExecStartPre=/usr/bin/chmod 777 /tmp/s3fs_cache
      ExecStartPre=/usr/bin/mkdir -p /tmp/s3fs_mnt
      ExecStartPre=/usr/bin/chmod 777 /tmp/s3fs_mnt
      ExecStart=/home/core/share/s3fs/startS3fs.sh start
      ExecStartPost=/usr/bin/ls -l /tmp/s3fs_mnt

# Note: write_files is executed before the coreos section
write_files:
  - path: /etc/ntp.conf
    permissions: 0644
    owner: root
    content: |
      # Allow for large adjustments in time
      # From: http://serverfault.com/questions/365690/
      #     best-practices-for-ntp-updating-in-virtualbox-virtual-machines-without-guest-add
      tinker panic 0

      # Common pool
      server 0.coreos.pool.ntp.org
      server 1.coreos.pool.ntp.org
      server 2.coreos.pool.ntp.org
      server 3.coreos.pool.ntp.org

      # - Allow only time queries, at a limited rate.
      # - Allow all local queries (IPv4, IPv6)
      restrict default nomodify nopeer noquery limited kod
      restrict 127.0.0.1
      restrict [::1]
  - path: /home/core/.bash_profile
    permissions: 644
    owner: core
    content: |
      #!/bin/bash

      if test -f ~/share/.coreosProfile
      then
           . ~/share/.coreosProfile
      fi
  - path: /root/.passwd-3fs
    permissions: 600
    owner: root
    content: |
      $AWS_ACCESS_KEY_ID:$AWS_SECRET_ACCESS_KEY
