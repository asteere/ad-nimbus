#! /bin/bash

# Variables, etc that is shared between Darwin and Coreos, etc. 
# Pull in shared functions here as the convention is to source .*Profile
. "$adNimbusDir"/.sharedFunctions

sourceadnimbusenvironment

export adNimbusTmp="$adNimbusDir"/tmp

if [ ! -z "$PS1" ]
then
    # Custom bash prompt via kirsle.net/wizards/ps1.html
    export PS1="\[$(tput setaf 5)\]\u@\[$(tput setaf 4)\]\h:\[$(tput setaf 2)\]\w:\n$\[$(tput setaf 0)\] \[$(tput sgr0)\]"
    export CLICOLOR=1

    # Common less options
    export LESS="-q -i-i -e -F -X -R"
fi

PATH=$PATH:"$adNimbusDir/bin"

